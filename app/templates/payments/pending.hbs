{{#page-toolbar}}
    <h2>
        {{#link-to "payments.pending"}}Pending Payments{{/link-to}}
        {{paper-icon "chevron-right"}}
        Incoming
    </h2>
{{/page-toolbar}}

{{#paper-content}}
    <div>
        {{#paper-list}}

            {{#each payments as |payment|}}
                {{#paper-item class="md-3-line md-long-text" onClick=(action "goToPayment" payment) as |controls|}}
                    {{paper-icon "assignment_turned_in" size=48}}
                    <div class="md-list-item-text">
                        <h3>{{payment.remote_name}}</h3>
                        <h4>{{payment.remote_account}}</h4>
                        <p>
                            {{newline-br text=payment.purpose}}
                        </p>
                        <p>{{payment.created_at}}</p>
                    </div>
                    <div class="md-secondary-container">
                        <h4>{{format-money (div payment.amount 100) symbol="â‚¬" format="%v %s"}}</h4>
                    </div>
                {{/paper-item}}
                {{else}}
                    {{#paper-item}}No pending payments found. Good job!{{/paper-item}}
            {{/each}}

        {{/paper-list}}
    </div>
{{/paper-content}}
