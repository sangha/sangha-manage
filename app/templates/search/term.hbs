<div>
    <p />
    {{paper-divider}}

    {{#paper-list}}
        {{#paper-subheader}}{{search.projects.length}} Projects found{{/paper-subheader}}
        {{#each search.projects as |project|}}
            {{#paper-item class="md-3-line md-long-text" onClick=(action "goToProject" project) as |controls|}}
                <img src={{project.logo}} alt={{project.name}} class="md-avatar">
                <div class="md-list-item-text">
                    <h3>{{project.name}}</h3>
                    <p>{{project.summary}}</p>
                </div>
                <div class="md-secondary-container">
                    <h4>{{format-money (div project.balance 100) symbol="€" format="%v %s"}}</h4>
                </div>
            {{/paper-item}}
        {{/each}}
    {{/paper-list}}

    {{#paper-list}}
        {{#paper-subheader}}{{search.budgets.length}} Budgets found{{/paper-subheader}}
        {{#each search.budgets as |budget|}}
            {{#paper-item class="md-3-line md-long-text" onClick=(action "goToBudget" budget.project budget) as |controls|}}
                <div class="md-list-item-text">
                    <h3>{{budget.name}}</h3>
                    <h4>Project {{budget.project.name}}</h4>
                    <p>{{budget.description}}</p>
                </div>
                <div class="md-secondary-container">
                    <h4>{{format-money (div budget.balance 100) symbol="€" format="%v %s"}}</h4>
                </div>
            {{/paper-item}}
        {{/each}}
    {{/paper-list}}

    {{#paper-list}}
        {{#paper-subheader}}{{search.payments.length}} Transactions found{{/paper-subheader}}
        {{#each search.payments as |payment|}}
            {{#paper-item class="md-3-line md-long-text" onClick=(action "goToPayment" payment) as |controls|}}
                <div class="md-list-item-text">
                    <h3>{{payment.remote_name}}</h3>
                    <h4>{{payment.purpose}}</h4>
                    <h4>{{payment.remote_account}}</h4>
                    <p>{{payment.created_at}}</p>
                </div>
                <div class="md-secondary-container">
                    <h4>{{format-money (div payment.amount 100) symbol="€" format="%v %s"}}</h4>
                </div>
            {{/paper-item}}
        {{/each}}
    {{/paper-list}}
</div>
