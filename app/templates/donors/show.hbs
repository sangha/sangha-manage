{{#page-toolbar}}
    <h2>
        Donors
    </h2>
{{/page-toolbar}}

{{#paper-content class="md-padding" }}
    <div class="layout-row layout-margin">
        <div class="layout-column flex">
            <div class="layout-row">
                <div class="flex">
                    <h2>All Transactions with {{donor}}</h2>
                </div>
            </div>

            {{paper-divider}}

            <div>
                {{#paper-list}}

                    {{#each payments as |payment|}}
                        {{#paper-item class="md-3-line md-long-text" onClick=(action "goToPayment" payment) as |controls|}}
                            <div class="md-list-item-text">
                                <h3>{{payment.remote_name}}</h3>
                                <h4>{{payment.remote_account}}</h4>
                                <p>{{payment.purpose}}</p>
                                <p>{{payment.created_at}}</p>
                            </div>
                            <div class="md-secondary-container">
                                <h4>{{format-money (div payment.amount 100) symbol="â‚¬" format="%v %s"}}</h4>
                            </div>
                        {{/paper-item}}
                    {{/each}}

                {{/paper-list}}
            </div>

        </div>
    </div>
{{/paper-content}}
